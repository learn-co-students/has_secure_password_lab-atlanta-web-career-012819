<h1>Login</h1>
<%= form_tag login_path do %>
  <label for="user_name">Name:</label>
  <%= text_field_tag "user[name]" %><br>
  <label for="user_password">Password:</label>
  <%= password_field_tag "user[password]" %><br>
  <%= submit_tag "login" %>
<% end %>
<% if flash.alert %>
  <%= flash.alert %>
<% end %>
